                            <WrapPanel Orientation="Horizontal" HorizontalAlignment="Left" VerticalAlignment="Top">
                                <Label Content="Foliage" VerticalAlignment="Center" FontWeight="Bold" />
                                <StackPanel Orientation="Horizontal" Margin="0">
                                    <Label Content="Foliage Pop-In Distance" VerticalAlignment="Center"/>
                                    <ComboBox x:Name="cmbFoliagePopin" Width="120" VerticalAlignment="Center" SelectedIndex="{Binding PopInIndex, Mode=TwoWay}">
                                        <ComboBoxItem Content="Near"/>
                                        <ComboBoxItem Content="Medium"/>
                                        <ComboBoxItem Content="Far" IsSelected="True"/>
                                        <ComboBoxItem Content="Very Far"/>
                                    </ComboBox>
                                </StackPanel>
                                <StackPanel Orientation="Horizontal" Margin="0">
                                    <Label Content="Foliage LOD" VerticalAlignment="Center"/>
                                    <Slider x:Name="sldrFoliageLOD" Margin="0,10,0,0" Width="120" VerticalAlignment="Center" SmallChange="0.1" LargeChange="0.1" Maximum="1" TickFrequency="0.1" Minimum="0" TickPlacement="BottomRight" IsSnapToTickEnabled="False" Value="{Binding FoliageLOD, Mode=TwoWay}" AutoToolTipPlacement="BottomRight" AutoToolTipPrecision="1"/>
                                </StackPanel>
                                <StackPanel Orientation="Horizontal" Margin="0">
                                    <Label Content="Grass Distance" VerticalAlignment="Center"/>
                                    <Slider x:Name="sldrFoliageGrassDist" Margin="0,10,0,0" Width="120" VerticalAlignment="Center" SmallChange="0.1" LargeChange="0.1" Maximum="1" TickFrequency="0.1" Minimum="0" TickPlacement="BottomRight" IsSnapToTickEnabled="False" Value="{Binding GrassDistance, Mode=TwoWay}" AutoToolTipPlacement="BottomRight" AutoToolTipPrecision="1"/>
                                </StackPanel>
                                <StackPanel Orientation="Horizontal" Margin="0">
                                    <Label Content="Tree Distance" VerticalAlignment="Center"/>
                                    <Slider x:Name="sldrFoliageTreeDist" Margin="0,10,0,0" Width="120" VerticalAlignment="Center" SmallChange="0.1" LargeChange="0.1" Maximum="1" TickFrequency="0.1" Minimum="0" TickPlacement="BottomRight" IsSnapToTickEnabled="False" Value="{Binding TreeDistance, Mode=TwoWay}" AutoToolTipPlacement="BottomRight" AutoToolTipPrecision="1"/>
                                </StackPanel>
                                <StackPanel Orientation="Horizontal" Margin="0">
                                    <Label Content="Grass Density" VerticalAlignment="Center"/>
                                    <Slider x:Name="sldrFoliageGrassDensity" Margin="0,10,0,0" Width="120" VerticalAlignment="Center" SmallChange="0.1" LargeChange="0.5" Maximum="1" TickFrequency="0.1" Minimum="0" TickPlacement="BottomRight" IsSnapToTickEnabled="False" Value="{Binding GrassDensity, Mode=TwoWay}" AutoToolTipPlacement="BottomRight" AutoToolTipPrecision="1"/>
                                </StackPanel>
                                <CheckBox x:Name="chkLimitFoliageGeometry" Margin="10,10,0,0" Content="Limit Foliage Geometry" IsChecked="{Binding LimitFoliageGeometry, Mode=TwoWay}" />
                            </WrapPanel>
                        </Expander>
                    </Grid>
                    <Line Stretch="Fill" Stroke="{DynamicResource {x:Static SystemColors.ActiveBorderBrushKey}}" X2="1"/>
                    <Grid DataContext="{Binding ViewDistanceQualitySettings}">
                        <Expander>
                            <Expander.Header>
                                <local:LockableExpanderHeader />
                            </Expander.Header>
                            <WrapPanel Orientation="Horizontal" HorizontalAlignment="Left" VerticalAlignment="Top">
                                <Label Content="View Distance" VerticalAlignment="Center" FontWeight="Bold" />
                                <StackPanel Orientation="Horizontal" Margin="0">
                                    <Label Content="View Distance Scale" VerticalAlignment="Center"/>
                                    <Slider x:Name="sldrViewDistance" Margin="0,10,0,0" Width="120" VerticalAlignment="Center" SmallChange="0.1" LargeChange="0.1" Maximum="2" TickFrequency="0.1" Minimum="0" TickPlacement="BottomRight" IsSnapToTickEnabled="True" Value="{Binding ViewDistance, Mode=TwoWay}" AutoToolTipPlacement="BottomRight" AutoToolTipPrecision="1"/>
                                </StackPanel>
                                <StackPanel Orientation="Horizontal" Margin="0">
                                    <Label Content="Light View Distance Scale" VerticalAlignment="Center"/>
                                    <Slider x:Name="sldrLightViewDistance" Margin="0,10,0,0" Width="120" VerticalAlignment="Center" SmallChange="0.1" LargeChange="0.1" Maximum="1" TickFrequency="0.1" Minimum="0" TickPlacement="BottomRight" IsSnapToTickEnabled="True" Value="{Binding LightViewDistance, Mode=TwoWay}" AutoToolTipPlacement="BottomRight" AutoToolTipPrecision="1"/>
                                </StackPanel>
                            </WrapPanel>
                        </Expander>
                    </Grid>
                </StackPanel>
            </ScrollViewer>
        </StackPanel>
    </Grid>
</Window>
