                                    <Label Content="Distance Field Shadow Quality" VerticalAlignment="Center"/>
                                    <Slider x:Name="sldrDistanceFieldShadowQuality" Margin="0,10,0,0" Width="120" VerticalAlignment="Center" SmallChange="0.1" LargeChange="0.25" Maximum="1.0" TickFrequency="1" Minimum="0.0" TickPlacement="BottomRight" IsSnapToTickEnabled="False" Value="{Binding DistantFieldShadowQuality, Mode=TwoWay}" AutoToolTipPlacement="BottomRight" AutoToolTipPrecision="1"/>
                                </StackPanel>
                                <StackPanel Orientation="Horizontal" Margin="0">
                                    <Label Content="Virtual Shadow Page Size" VerticalAlignment="Center"/>
                                    <ComboBox x:Name="cmbShadowPageSize" Width="120" VerticalAlignment="Center" SelectedIndex="{Binding ShadowPageSizeIndex, Mode=TwoWay}">
                                        <ComboBoxItem Content="512"/>
                                        <ComboBoxItem Content="1024"/>
                                        <ComboBoxItem Content="2048"/>
                                        <ComboBoxItem Content="4096" IsSelected="True"/>
                                    </ComboBox>
                                </StackPanel>
                                <StackPanel Orientation="Horizontal" Margin="0">
                                    <Label Content="Higher detailed shadows up close preference" VerticalAlignment="Center"/>
                                    <Slider x:Name="sldrFirstClipmapLevel" Margin="0,10,0,0" Width="120" VerticalAlignment="Center" SmallChange="1" LargeChange="1" Maximum="6" TickFrequency="1" Minimum="1" TickPlacement="BottomRight" IsSnapToTickEnabled="True" Value="{Binding FirstClipmapLevel, Mode=TwoWay}" AutoToolTipPlacement="BottomRight" AutoToolTipPrecision="0"/>
                                </StackPanel>
                                <StackPanel Orientation="Horizontal" Margin="0">
                                    <Label Content="Directional light shadow quality preference" VerticalAlignment="Center"/>
                                    <ComboBox x:Name="cmbDirectionalLightQualityPreference" Width="120" VerticalAlignment="Center" SelectedIndex="{Binding DirectionalLightQualityPreferenceIndex, Mode=TwoWay}">
                                        <ComboBoxItem Content="0.5x" />
                                        <ComboBoxItem Content="Normal"/>
                                        <ComboBoxItem Content="1.5x" IsSelected="True"/>
                                        <ComboBoxItem Content="2x"/>
                                        <ComboBoxItem Content="4x"/>
                                    </ComboBox>
                                </StackPanel>
                                <StackPanel Orientation="Horizontal" Margin="0">
                                    <Label Content="Directional Shadow preference" VerticalAlignment="Center"/>
                                    <Slider x:Name="sldrViewBiasDirectional" Margin="0,10,0,0" Width="120" VerticalAlignment="Center" SmallChange="1" LargeChange="1" Maximum="6" TickFrequency="1" Minimum="0" TickPlacement="BottomRight" IsSnapToTickEnabled="True" Value="{Binding ViewBiasDirectional, Mode=TwoWay}" AutoToolTipPlacement="BottomRight" AutoToolTipPrecision="0"/>
                                </StackPanel>
                                <StackPanel Orientation="Horizontal" Margin="0">
                                    <Label Content="Shadowmap Raytracing quality" VerticalAlignment="Center"/>
                                    <ComboBox x:Name="cmbShadowRaytraceQuality" Width="120" VerticalAlignment="Center" SelectedIndex="{Binding ShadowRaytraceQualityIndex, Mode=TwoWay}">
                                        <ComboBoxItem Content="Very low" />
                                        <ComboBoxItem Content="Low"/>
                                        <ComboBoxItem Content="Medium" />
                                        <ComboBoxItem Content="High"/>
                                        <ComboBoxItem Content="Epic" IsSelected="True"/>
                                    </ComboBox>
                                </StackPanel>
                                <StackPanel Orientation="Horizontal" Margin="0">
                                    <Label Content="Mesh Detail For Shadows" VerticalAlignment="Center"/>
                                    <Slider x:Name="sldrShadowMeshDetail" Margin="0,10,0,0" Width="120" VerticalAlignment="Center" SmallChange="0.1" LargeChange="0.25" Maximum="1" TickFrequency="1" Minimum="-1" TickPlacement="BottomRight" IsDirectionReversed="True" IsSnapToTickEnabled="False" Value="{Binding ShadowMeshDetail, Mode=TwoWay}" AutoToolTipPlacement="BottomRight" AutoToolTipPrecision="1"/>
                                </StackPanel>
                                <CheckBox x:Name="chkContactShadows" Content="Contact Shadows" Margin="10,0,0,0" IsChecked="{Binding ContactShadows, Mode=TwoWay}" VerticalAlignment="Center"/>
                                <CheckBox x:Name="chkContactShadowsLocal" Content="Contact Shadows For Local Lights" Margin="10,0,0,0" IsChecked="{Binding ContactShadowsLocalLights, Mode=TwoWay}" VerticalAlignment="Center"/>
                                <CheckBox x:Name="chkShadowSkeletelProxy" Content="Simpler mesh for animated shadows" Margin="10,0,0,0" IsChecked="{Binding ShadowSkeletelProxy, Mode=TwoWay}" VerticalAlignment="Center"/>
                                <CheckBox x:Name="chkShadowStaticSeperate"  Content="Prefer performance over VRAM for static meshes" Margin="10,0,0,0" IsChecked="{Binding ShadowStaticSeperate, Mode=TwoWay}" VerticalAlignment="Center"/>
                            </WrapPanel>
                        </Expander>
                    </Grid>
                    <Line Stretch="Fill" Stroke="{DynamicResource {x:Static SystemColors.ActiveBorderBrushKey}}" X2="1"/>
                    <Grid DataContext="{Binding CloudsQualitySettings}">
                        <Expander>
                            <Expander.Header>
                                <local:LockableExpanderHeader />
                            </Expander.Header>
                            <WrapPanel Orientation="Horizontal" HorizontalAlignment="Left" VerticalAlignment="Top">
                                <Label Content="Clouds" VerticalAlignment="Center" FontWeight="Bold" />
                                <CheckBox x:Name="chkCloudAO" Content="Enable Sky Ambient Occlusion" Margin="10,0,0,0" IsChecked="{Binding CloudAO, Mode=TwoWay}" VerticalAlignment="Center"/>
                                <StackPanel Orientation="Horizontal" Margin="0">
                                    <Label Content="Sky Ambient Occlusion Resolution" VerticalAlignment="Center"/>
                                    <ComboBox x:Name="cmbCloudAORes" Width="120" VerticalAlignment="Center" SelectedIndex="{Binding CloudAOResIndex, Mode=TwoWay}">
                                        <ComboBoxItem Content="32"/>
                                        <ComboBoxItem Content="64"/>
                                        <ComboBoxItem Content="128" IsSelected="True"/>
                                        <ComboBoxItem Content="256"/>
                                    </ComboBox>
                                </StackPanel>
                                <StackPanel Orientation="Horizontal" Margin="0">
                                    <Label Content="Max View Ray Samples" VerticalAlignment="Center"/>
                                    <Slider x:Name="sldrCloudViewRayCount" Margin="0,10,0,0" Width="120" VerticalAlignment="Center" SmallChange="1" LargeChange="50" Maximum="400" TickFrequency="50" Minimum="1" TickPlacement="BottomRight" IsSnapToTickEnabled="False" Value="{Binding CloudViewRayCount, Mode=TwoWay}" AutoToolTipPlacement="BottomRight" AutoToolTipPrecision="0"/>
                                </StackPanel>
                                <StackPanel Orientation="Horizontal" Margin="0">
                                    <Label Content="Max Reflection Ray Samples" VerticalAlignment="Center"/>
                                    <Slider x:Name="sldrCloudReflectionRayCount" Margin="0,10,0,0" Width="120" VerticalAlignment="Center" SmallChange="1" LargeChange="10" Maximum="100" TickFrequency="10" Minimum="1" TickPlacement="BottomRight" IsSnapToTickEnabled="False" Value="{Binding CloudReflectionRayCount, Mode=TwoWay}" AutoToolTipPlacement="BottomRight" AutoToolTipPrecision="0"/>
                                </StackPanel>
                                <StackPanel Orientation="Horizontal" Margin="0">
                                    <Label Content="Max Shadow Ray Samples" VerticalAlignment="Center"/>
                                    <Slider x:Name="sldrCloudShadowRayCount" Margin="0,10,0,0" Width="120" VerticalAlignment="Center" SmallChange="1" LargeChange="1" Maximum="6" TickFrequency="1" Minimum="1" TickPlacement="BottomRight" IsSnapToTickEnabled="True" Value="{Binding CloudShadowRayCount, Mode=TwoWay}" AutoToolTipPlacement="BottomRight" AutoToolTipPrecision="0"/>
                                </StackPanel>
                            </WrapPanel>
                        </Expander>
                    </Grid>
                    <Line Stretch="Fill" Stroke="{DynamicResource {x:Static SystemColors.ActiveBorderBrushKey}}" X2="1"/>
                    <Grid DataContext="{Binding FogQualitySettings}">
                        <Expander>
                            <Expander.Header>
                                <local:LockableExpanderHeader />
                            </Expander.Header>
                            <WrapPanel Orientation="Horizontal" HorizontalAlignment="Left" VerticalAlignment="Top">
                                <Label Content="Fog" VerticalAlignment="Center" FontWeight="Bold" />
                                <CheckBox x:Name="chkVolumetricFog" Content="Volumetric Fog" Margin="10,0,0,0" IsChecked="{Binding VolumetricFog, Mode=TwoWay}" VerticalAlignment="Center"/>
                                <StackPanel Orientation="Horizontal" Margin="0">
                                    <Label Content="Volumetric Fog Resolution" VerticalAlignment="Center"/>
                                    <ComboBox x:Name="cmbFogRes" Width="120" VerticalAlignment="Center" SelectedIndex="{Binding FogResIndex, Mode=TwoWay}">
                                        <ComboBoxItem Content="Low"/>
                                        <ComboBoxItem Content="Medium"/>
                                        <ComboBoxItem Content="High"/>
                                        <ComboBoxItem Content="Epic" IsSelected="True"/>
                                        <ComboBoxItem Content="Ultra"/>
                                    </ComboBox>
                                </StackPanel>
                                <StackPanel Orientation="Horizontal" Margin="0">
                                    <Label Content="Supersample count" VerticalAlignment="Center"/>
                                    <Slider x:Name="sldrFogSampleCount" Margin="0,10,0,0" Width="120" VerticalAlignment="Center" SmallChange="1" LargeChange="1" Maximum="12" TickFrequency="1" Minimum="1" TickPlacement="BottomRight" IsSnapToTickEnabled="True" Value="{Binding FogSuperSampleCount, Mode=TwoWay}" AutoToolTipPlacement="BottomRight" AutoToolTipPrecision="0"/>
                                </StackPanel>
                            </WrapPanel>
                        </Expander>
                    </Grid>
                    <Line Stretch="Fill" Stroke="{DynamicResource {x:Static SystemColors.ActiveBorderBrushKey}}" X2="1"/>
                    <Grid DataContext="{Binding SkyQualitySettings}">
                        <Expander>
                            <Expander.Header>
                                <local:LockableExpanderHeader />
                            </Expander.Header>
                            <WrapPanel Orientation="Horizontal" HorizontalAlignment="Left" VerticalAlignment="Top">
                                <Label Content="Sky" VerticalAlignment="Center" FontWeight="Bold" />
                                <StackPanel Orientation="Horizontal" Margin="0">
                                    <Label Content="Sky sample count" VerticalAlignment="Center"/>
                                    <Slider x:Name="sldrSkySampleMax" Margin="0,10,0,0" Width="120" VerticalAlignment="Center" SmallChange="1" LargeChange="1" Maximum="16" TickFrequency="1" Minimum="1" TickPlacement="BottomRight" IsSnapToTickEnabled="True" Value="{Binding MaxSamples, Mode=TwoWay}" AutoToolTipPlacement="BottomRight" AutoToolTipPrecision="0"/>
                                </StackPanel>
                                <StackPanel Orientation="Horizontal" Margin="0">
                                    <Label Content="Sky Depth Detail" VerticalAlignment="Center"/>
                                    <ComboBox x:Name="cmbSkyDepthLevel" Width="120" VerticalAlignment="Center" SelectedIndex="{Binding DepthLevelIndex, Mode=TwoWay}">
                                        <ComboBoxItem Content="Very Low"/>
                                        <ComboBoxItem Content="Low"/>
                                        <ComboBoxItem Content="Medium"/>
                                        <ComboBoxItem Content="High"/>
                                        <ComboBoxItem Content="Epic" IsSelected="True"/>
                                        <ComboBoxItem Content="Ultra"/>
                                    </ComboBox>
                                </StackPanel>
                                <StackPanel Orientation="Horizontal" Margin="0">
                                    <Label Content="Sky colour samples" VerticalAlignment="Center"/>
                                    <Slider x:Name="sldrSkyColorSamples" Margin="0,10,0,0" Width="120" VerticalAlignment="Center" SmallChange="2" LargeChange="8" Maximum="256" TickFrequency="8" Minimum="2" TickPlacement="BottomRight" IsSnapToTickEnabled="False" Value="{Binding ColorSamples, Mode=TwoWay}" AutoToolTipPlacement="BottomRight" AutoToolTipPrecision="0"/>
                                </StackPanel>
                                <StackPanel Orientation="Horizontal" Margin="0">
                                    <Label Content="Atmosphere samples" VerticalAlignment="Center"/>
                                    <Slider x:Name="sldrSkyAtmosphereSamples" Margin="0,10,0,0" Width="120" VerticalAlignment="Center" SmallChange="2" LargeChange="8" Maximum="256" TickFrequency="8" Minimum="2" TickPlacement="BottomRight" IsSnapToTickEnabled="False" Value="{Binding AtmosphereSamples, Mode=TwoWay}" AutoToolTipPlacement="BottomRight" AutoToolTipPrecision="0"/>
                                </StackPanel>
                                <CheckBox x:Name="chkHigherFormatLUT" Content="Higher detail transmittance lookup" Margin="10,0,0,0" IsChecked="{Binding HigherFormatLUT, Mode=TwoWay}" VerticalAlignment="Center"/>
