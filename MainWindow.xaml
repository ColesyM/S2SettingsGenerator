                                    <Label Content="Transmittance lookup samples" VerticalAlignment="Center"/>
                                    <Slider x:Name="sldrSkyTransmittanceSamples" Margin="0,10,0,0" Width="120" VerticalAlignment="Center" SmallChange="1" LargeChange="1" Maximum="20" TickFrequency="8" Minimum="2" TickPlacement="BottomRight" IsSnapToTickEnabled="False" Value="{Binding TransmittanceSamples, Mode=TwoWay}" AutoToolTipPlacement="BottomRight" AutoToolTipPrecision="0"/>
                                </StackPanel>
                                <StackPanel Orientation="Horizontal" Margin="0">
                                    <Label Content="Scattering lookup samples" VerticalAlignment="Center"/>
