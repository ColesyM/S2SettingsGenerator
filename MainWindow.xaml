<Window x:Class="S2SettingsGenerator.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:S2SettingsGenerator"
        mc:Ignorable="d"
        Title="Stalker 2 Graphics Settings Generator for Engine.ini" Height="740" Width="630">
    <Grid Margin="0,0,0,0">
        <Image Margin="10,10,0,0" HorizontalAlignment="Left" VerticalAlignment="Top" Source="/S2HoC_GSCGameWorld__Logo_on_white.png" Height="64" Opacity="0.7"/>
        <Label Content="Settings Generator" HorizontalAlignment="Left" Margin="72,44,0,0" VerticalAlignment="Top" Foreground="Red" FontSize="20" FontWeight="Bold" RenderTransformOrigin="0.5,0.5">
            <Label.Effect>
                <DropShadowEffect BlurRadius="7.0"/>
            </Label.Effect>
            <Label.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform/>
                    <RotateTransform Angle="-15.046"/>
                    <TranslateTransform/>
                </TransformGroup>
            </Label.RenderTransform>
        </Label>
        <Border VerticalAlignment="Top" BorderBrush="Black" BorderThickness="2,2,2,2" Margin="262,5,10,0">
            <StackPanel>
                <Label HorizontalAlignment="Left" VerticalAlignment="Top" Padding="5,0,5,0">
                    <Label.Content>
                        <TextBlock Text="This will generate [/Script/Engine.RendererSettings] values only for an Engine.ini" TextWrapping="Wrap"/>
                    </Label.Content>
                </Label>
                <Label Content="It will not modify other settings." HorizontalAlignment="Left" VerticalAlignment="Center" Width="460"/>
                <Label HorizontalAlignment="Left" VerticalAlignment="Top" FontWeight="Bold" FontSize="10" Foreground="Red">
                    <Label.Content>
                        <TextBlock Text="It is not compatible with other .pak mods that modify Engine.ini RendererSettings" TextWrapping="Wrap"/>
                    </Label.Content>
                </Label>
            </StackPanel>
        </Border>
        <StackPanel HorizontalAlignment="Left" Margin="10,105,0,0" VerticalAlignment="Top">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" Margin="0" VerticalAlignment="Top">
                <Label Content="Preset:" HorizontalAlignment="Left" VerticalAlignment="Center" FontWeight="Bold"/>
                <WrapPanel Orientation="Horizontal" Margin="0,3,0,0" HorizontalAlignment="Left" VerticalAlignment="Center">
                    <RadioButton Content="Very Low" IsEnabled="False"/>
                    <RadioButton Content="Low" Margin="10,0,0,0" IsEnabled="False"/>
                    <RadioButton Content="Medium" Margin="10,0,0,0" IsEnabled="False"/>
                    <RadioButton Content="High" Margin="10,0,0,0" IsEnabled="False"/>
                    <RadioButton Content="Very High" Margin="10,0,0,0" IsEnabled="False"/>
                    <RadioButton Content="Epic" Margin="10,0,0,0" IsEnabled="False"/>
                    <RadioButton Content="Custom" Margin="10,0,0,0" IsChecked="True"/>
                </WrapPanel>
            </StackPanel>
            <Button x:Name="btnGenerate" Content="Generate Engine.ini" HorizontalAlignment="Left" Margin="10" Padding="10" Click="btnGenerate_Click"/>
        </StackPanel>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,182,0,0" VerticalAlignment="Top" Width="630">
            <ScrollViewer Width="626">
                <StackPanel Orientation="Vertical" Margin="10,0,0,0" VerticalAlignment="Top" Width="535">
                    <StackPanel.Resources>
                        <Style TargetType="{x:Type StackPanel}">
                            <Setter Property="Margin" Value="0,10,0,0"/>
                        </Style>
                    </StackPanel.Resources>

                    <Line Stretch="Fill" Stroke="{DynamicResource {x:Static SystemColors.ActiveBorderBrushKey}}" X2="1"/>
                    <Expander>
                        <Expander.Style>
                            <Style TargetType="Expander">
                                <Setter Property="IsExpanded" Value="False" />
                                <Setter Property="Header" Value="See Texture Settings" />

                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding IsExpanded,RelativeSource={RelativeSource Self}}" Value="True">
                                        <Setter Property="Header" Value="Hide Texture Settings" />
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Expander.Style>
                        <WrapPanel Orientation="Horizontal" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="0,10,0,0">
                            <Line Stretch="Fill" X2="1" Stroke="{DynamicResource {x:Static SystemColors.ActiveBorderBrushKey}}"/>
                            <Label Content="Textures" VerticalAlignment="Center" FontWeight="Bold"/>
                            <Slider x:Name="sldrTextures" Margin="0,10,0,0" Width="120" VerticalAlignment="Center" SmallChange="0.5" LargeChange="0.5" Maximum="2" TickFrequency="0.5" Minimum="0" TickPlacement="BottomRight" IsDirectionReversed="True" IsSnapToTickEnabled="True" ValueChanged="TextureSlider_ValueChanged"/>
                            <StackPanel Margin="10,0,0,0" Orientation="Horizontal">
                                <Label Content="Anisotropic" VerticalAlignment="Center"/>
                                <ComboBox x:Name="cmbAnisotropic" Width="100" VerticalAlignment="Center">
                                    <ComboBoxItem Content="Disabled"/>
                                    <ComboBoxItem Content="2x"/>
                                    <ComboBoxItem Content="4x"/>
                                    <ComboBoxItem Content="8x" IsSelected="True"/>
                                    <ComboBoxItem Content="16x"/>
                                </ComboBox>
                            </StackPanel>
                            <StackPanel Margin="10,0,0,0" Orientation="Horizontal">
                                <Label Content="Streaming Pool" VerticalAlignment="Center"/>
                                <ComboBox x:Name="cmbStreamingPool" Width="100" VerticalAlignment="Center">
                                    <ComboBoxItem Content="Tiny"/>
                                    <ComboBoxItem Content="Small"/>
                                    <ComboBoxItem Content="Medium"/>
                                    <ComboBoxItem Content="Large"/>
                                    <ComboBoxItem Content="Very Large" IsSelected="True"/>
                                    <CheckBox IsChecked="True" Content="Limit to VRAM"/>
                                </ComboBox>
                            </StackPanel>
                            <CheckBox x:Name="chkAmortizeCPUToGPUCopy" Margin="10,0,0,0" VerticalAlignment="Center" IsChecked="False" Content="Throttle copy to VRAM"/>
                            <StackPanel Orientation="Horizontal" Margin="0">
                                <Label Content="Mip Preference" VerticalAlignment="Center"/>
                                <ComboBox x:Name="cmbMipPreference" Width="120" VerticalAlignment="Center">
                                    <ComboBoxItem Content="Prefer Lower"/>
                                    <ComboBoxItem Content="Normal" IsSelected="True"/>
                                    <ComboBoxItem Content="Prefer Higher"/>
                                </ComboBox>
                            </StackPanel>
                            <StackPanel Orientation="Horizontal" Margin="0">
                                <Label Content="Stream Limit Per Frame" VerticalAlignment="Center"/>
                                <ComboBox x:Name="cmbStreamLimitPerFrame" Width="100" VerticalAlignment="Center">
                                    <ComboBoxItem Content="No Limit" IsSelected="True"/>
                                    <ComboBoxItem Content="10" />
                                    <ComboBoxItem Content="5" />
                                    <ComboBoxItem Content="3" />
                                    <ComboBoxItem Content="1" />
                                </ComboBox>
                            </StackPanel>
                            <StackPanel Orientation="Horizontal" Margin="0">
                                <Label Content="Texture Copy Speed" VerticalAlignment="Center"/>
                                <ComboBox x:Name="cmbTextureCopySpeed" Width="100" VerticalAlignment="Center">
                                    <ComboBoxItem Content="Very Low"/>
                                    <ComboBoxItem Content="Low" />
                                    <ComboBoxItem Content="Medium" />
                                    <ComboBoxItem Content="High" IsSelected="True"/>
                                </ComboBox>
                            </StackPanel>
                            <StackPanel Orientation="Horizontal" Margin="0">
                                <Label Content="Texture Generation Speed" VerticalAlignment="Center"/>
                                <ComboBox x:Name="cmbTextureGenerationSpeed" Width="100" VerticalAlignment="Center">
                                    <ComboBoxItem Content="Very Low"/>
                                    <ComboBoxItem Content="Low" />
                                    <ComboBoxItem Content="Medium" />
                                    <ComboBoxItem Content="High" IsSelected="True"/>
                                </ComboBox>
                            </StackPanel>
                        </WrapPanel>
                    </Expander>
                    <Line Stretch="Fill" Stroke="{DynamicResource {x:Static SystemColors.ActiveBorderBrushKey}}" X2="1"/>
                    <Expander>
                        <Expander.Style>
                            <Style TargetType="Expander">
                                <Setter Property="IsExpanded" Value="False" />
                                <Setter Property="Header" Value="See Hair Settings" />

                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding IsExpanded,RelativeSource={RelativeSource Self}}" Value="True">
                                        <Setter Property="Header" Value="Hide Hair Settings" />
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Expander.Style>
                        <WrapPanel Orientation="Horizontal" HorizontalAlignment="Left" VerticalAlignment="Top">
                            <Label Content="Hair" FontWeight="Bold" VerticalAlignment="Center"/>
                            <CheckBox x:Name="chkHairAO" Content="Ambient Occlusion" IsChecked="True" VerticalAlignment="Center"/>
                            <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="10,0,0,0">
                                <Label Content="AO Samples" VerticalAlignment="Center"/>
                                <Slider x:Name="sldrHairAOSamples" Margin="0,10,0,0" Width="120" VerticalAlignment="Center" SmallChange="1" LargeChange="1" Maximum="5" TickFrequency="1" Minimum="1" TickPlacement="BottomRight" IsSnapToTickEnabled="True" Value="4"/>
                            </StackPanel>
                            <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="10,0,0,0">
                                <Label Content="Strand Visiblity" VerticalAlignment="Center"/>
                                <Slider x:Name="sldrHairStrandVisibility" Margin="0,10,0,0" Width="120" VerticalAlignment="Center" SmallChange="1" LargeChange="1" Maximum="5" TickFrequency="1" Minimum="1" TickPlacement="BottomRight" IsSnapToTickEnabled="True" Value="4"/>
                            </StackPanel>
                            <CheckBox x:Name="chkHairLightingAndShadows" Content="Lighting and Shadows" IsChecked="True" VerticalAlignment="Center"/>
                            <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="10,0,0,0">
                                <Label Content="Quality" VerticalAlignment="Center"/>
                                <Slider x:Name="sldrHairQuality" Margin="0,10,0,0" Width="120" VerticalAlignment="Center" SmallChange="1" LargeChange="1" Maximum="3" TickFrequency="1" Minimum="0" TickPlacement="BottomRight" IsSnapToTickEnabled="True" Value="3"/>
                            </StackPanel>
                        </WrapPanel>
                    </Expander>
                    <Line Stretch="Fill" Stroke="{DynamicResource {x:Static SystemColors.ActiveBorderBrushKey}}" X2="1"/>
                    <Expander>
                        <Expander.Style>
                            <Style TargetType="Expander">
                                <Setter Property="IsExpanded" Value="False" />
                                <Setter Property="Header" Value="See Object Detail Settings" />

                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding IsExpanded,RelativeSource={RelativeSource Self}}" Value="True">
                                        <Setter Property="Header" Value="Hide Object Detail Settings" />
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Expander.Style>
                        <WrapPanel Orientation="Horizontal" HorizontalAlignment="Left" VerticalAlignment="Top">
                            <Label Content="Objects" VerticalAlignment="Center" FontWeight="Bold" />
                            <StackPanel Orientation="Horizontal" Margin="0">
                                <Label Content="Overall Detail" VerticalAlignment="Center"/>
                                <ComboBox x:Name="cmbOverallDetail" Width="100" VerticalAlignment="Center">
                                    <ComboBoxItem Content="Low"/>
                                    <ComboBoxItem Content="Medium" />
                                    <ComboBoxItem Content="High" IsSelected="True"/>
                                    <ComboBoxItem Content="Epic" />
                                </ComboBox>
                            </StackPanel>
                            <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="10,0,0,0">
                                <Label Content="Preferred Detail" VerticalAlignment="Center"/>
                                <Slider x:Name="sldrPreferredObjectDetail" Margin="0,10,0,0" Width="120" VerticalAlignment="Center" SmallChange="0.05" LargeChange="0.1" Maximum="1" TickFrequency="0.1" Minimum="0" TickPlacement="BottomRight" IsSnapToTickEnabled="True" Value="0" IsDirectionReversed="True" AutoToolTipPlacement="BottomRight"/>
                            </StackPanel>
                            <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="10,0,0,0">
                                <Label Content="Required Detail" VerticalAlignment="Center"/>
                                <Slider x:Name="sldrRequiredObjectDetail" Margin="0,10,0,0" Width="120" VerticalAlignment="Center" SmallChange="0.05" LargeChange="0.1" Maximum="0" TickFrequency="0.1" Minimum="-2" TickPlacement="BottomRight" IsSnapToTickEnabled="True" IsDirectionReversed="True" Value="-2"/>
                            </StackPanel>
                            <StackPanel Orientation="Horizontal" Margin="0">
                                <Label Content="Max Attaches" VerticalAlignment="Center"/>
                                <ComboBox x:Name="cmbMaxAttaches" Width="100" VerticalAlignment="Center">
                                    <ComboBoxItem Content="5"/>
                                    <ComboBoxItem Content="10" />
                                    <ComboBoxItem Content="20"/>
                                    <ComboBoxItem Content="No Limit" IsSelected="True"/>
                                </ComboBox>
                            </StackPanel>
                        </WrapPanel>
                    </Expander>
                    <Line Stretch="Fill" Stroke="{DynamicResource {x:Static SystemColors.ActiveBorderBrushKey}}" X2="1"/>
                    <Expander>
                        <Expander.Style>
                            <Style TargetType="Expander">
                                <Setter Property="IsExpanded" Value="False" />
                                <Setter Property="Header" Value="See Effects Settings" />

                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding IsExpanded,RelativeSource={RelativeSource Self}}" Value="True">
                                        <Setter Property="Header" Value="Hide Effects Settings" />
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Expander.Style>
                        <WrapPanel Orientation="Horizontal" HorizontalAlignment="Left" VerticalAlignment="Top">
                            <Label Content="Effects" VerticalAlignment="Center" FontWeight="Bold" />
                            <StackPanel Orientation="Horizontal" Margin="0">
                                <Label Content="Refraction Quality" VerticalAlignment="Center"/>
                                <ComboBox x:Name="cmbRefractionQuality" Width="100" VerticalAlignment="Center">
                                    <ComboBoxItem Content="Off"/>
                                    <ComboBoxItem Content="Low"/>
                                    <ComboBoxItem Content="Medium" IsSelected="True"/>
                                    <ComboBoxItem Content="High" />
                                </ComboBox>
                            </StackPanel>
                            <CheckBox x:Name="chkParticleRefractionAA" Content="Refraction Antialiasing" Margin="10,0,0,0" IsChecked="True" VerticalAlignment="Center"/>
                            <StackPanel Orientation="Horizontal" Margin="0">
                                <Label Content="Particle counts" VerticalAlignment="Center"/>
                                <Slider x:Name="sldrEmitterSpawnRate" Margin="0,10,0,0" Width="120" VerticalAlignment="Center" SmallChange="0.1" LargeChange="1" Maximum="1" TickFrequency="0.1" Minimum="0" TickPlacement="BottomRight" IsSnapToTickEnabled="True" Value="1" AutoToolTipPlacement="BottomRight"/>
                            </StackPanel>
                            <StackPanel Orientation="Horizontal" Margin="0">
                                <Label Content="Particle Lighting" VerticalAlignment="Center"/>
                                <ComboBox x:Name="cmbParticleLighting" Width="100" VerticalAlignment="Center">
                                    <ComboBoxItem Content="Unlit"/>
                                    <ComboBoxItem Content="Simple" />
                                    <ComboBoxItem Content="High Quality" IsSelected="True"/>
                                </ComboBox>
                            </StackPanel>
                            <StackPanel Orientation="Horizontal" Margin="0">
                                <Label Content="Particle Quality" VerticalAlignment="Center"/>
                                <ComboBox x:Name="cmbParticleQuality" Width="100" VerticalAlignment="Center">
                                    <ComboBoxItem Content="Low"/>
                                    <ComboBoxItem Content="Medium" />
                                    <ComboBoxItem Content="High"/>
                                    <ComboBoxItem Content="Epic" IsSelected="True"/>
                                </ComboBox>
                            </StackPanel>
                            <StackPanel Orientation="Horizontal" Margin="0">
                                <Label Content="Particle simulation" VerticalAlignment="Center"/>
                                <Slider x:Name="sldrParticleSimulation" Margin="0,10,0,0" Width="120" VerticalAlignment="Center" SmallChange="1" LargeChange="1" Maximum="20" TickFrequency="1" Minimum="1" TickPlacement="BottomRight" IsSnapToTickEnabled="True" Value="20" AutoToolTipPlacement="BottomRight"/>
                            </StackPanel>
                        </WrapPanel>
                    </Expander>
                    <Line Stretch="Fill" Stroke="{DynamicResource {x:Static SystemColors.ActiveBorderBrushKey}}" X2="1"/>
                    <Expander>
                        <Expander.Style>
                            <Style TargetType="Expander">
                                <Setter Property="IsExpanded" Value="False" />
                                <Setter Property="Header" Value="See Material Quality Settings" />

                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding IsExpanded,RelativeSource={RelativeSource Self}}" Value="True">
                                        <Setter Property="Header" Value="Hide Material Quality Settings" />
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Expander.Style>
                        <WrapPanel Orientation="Horizontal" HorizontalAlignment="Left" VerticalAlignment="Top">
                            <Label Content="Materials" VerticalAlignment="Center" FontWeight="Bold" />
                            <StackPanel Orientation="Horizontal" Margin="0">
                                <Label Content="Material Quality" VerticalAlignment="Center"/>
                                <ComboBox x:Name="cmbMaterialQuality" Width="120" VerticalAlignment="Center">
                                    <ComboBoxItem Content="Low"/>
                                    <ComboBoxItem Content="Medium" />
                                    <ComboBoxItem Content="High"/>
                                    <ComboBoxItem Content="Epic" IsSelected="True"/>
                                </ComboBox>
                            </StackPanel>
                            <CheckBox x:Name="chkMaterialAniso" Content="Anisotropic BRDF" Margin="10,0,0,0" IsChecked="True" VerticalAlignment="Center"/>
                        </WrapPanel>
                    </Expander>
                    <Line Stretch="Fill" Stroke="{DynamicResource {x:Static SystemColors.ActiveBorderBrushKey}}" X2="1"/>
                    <Expander>
                        <Expander.Style>
                            <Style TargetType="Expander">
                                <Setter Property="IsExpanded" Value="False" />
                                <Setter Property="Header" Value="See Post Processing Settings" />

                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding IsExpanded,RelativeSource={RelativeSource Self}}" Value="True">
                                        <Setter Property="Header" Value="Hide Post Processing Settings" />
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Expander.Style>
                        <WrapPanel Orientation="Horizontal" HorizontalAlignment="Left" VerticalAlignment="Top">
                            <Label Content="Post Processing" VerticalAlignment="Center" FontWeight="Bold" />
                            <StackPanel Orientation="Horizontal" Margin="0">
                                <Label Content="Filtering Quality" VerticalAlignment="Center"/>
                                <ComboBox x:Name="cmbPPFilteringQuality" Width="100" VerticalAlignment="Center">
                                    <ComboBoxItem Content="Low"/>
                                    <ComboBoxItem Content="Medium" />
                                    <ComboBoxItem Content="High" IsSelected="True"/>
                                </ComboBox>
                            </StackPanel>
                            <StackPanel Orientation="Horizontal" Margin="0">
                                <Label Content="Tonemapper" VerticalAlignment="Center"/>
                                <ComboBox x:Name="cmbToneMapper" Width="120" VerticalAlignment="Center">
                                    <ComboBoxItem Content="Basic"/>
                                    <ComboBoxItem Content="Vignette" />
                                    <ComboBoxItem Content="Grain" />
                                    <ComboBoxItem Content="GrainJitter  " IsSelected="True"/>
                                </ComboBox>
                            </StackPanel>
                            <StackPanel Orientation="Horizontal" Margin="0">
                                <Label Content="VRAM Allowance" VerticalAlignment="Center"/>
                                <Slider x:Name="sldrPPRenderTargetPool" Margin="0,10,0,0" Width="120" VerticalAlignment="Center" SmallChange="50" LargeChange="100" Maximum="600" TickFrequency="1" Minimum="100" TickPlacement="BottomRight" IsSnapToTickEnabled="True" Value="400"/>
                            </StackPanel>
                            <StackPanel Orientation="Horizontal" Margin="0">
                                <Label Content="Lens-Flare Quality" VerticalAlignment="Center"/>
                                <ComboBox x:Name="cmbLensFlareQuality" Width="120" VerticalAlignment="Center">
                                    <ComboBoxItem Content="Low"/>
                                    <ComboBoxItem Content="Medium" />
                                    <ComboBoxItem Content="High" IsSelected="True"/>
                                </ComboBox>
                            </StackPanel>
                            <CheckBox x:Name="chkFringeQual" Content="Improve Scene Colour Fringe Quality" Margin="10,0,0,0" IsChecked="True" VerticalAlignment="Center"/>
                            <CheckBox x:Name="chkEyeAdapatation" Content="Eye Adaptation" Margin="10,0,0,0" IsChecked="True" VerticalAlignment="Center"/>
                            <StackPanel Orientation="Horizontal" Margin="0">
                                <Label Content="Bloom Quality" VerticalAlignment="Center"/>
                                <ComboBox x:Name="cmbBloomQuality" Width="120" VerticalAlignment="Center">
                                    <ComboBoxItem Content="Off"/>
                                    <ComboBoxItem Content="Very Low" />
                                    <ComboBoxItem Content="Low" />
                                    <ComboBoxItem Content="Medium" />
                                    <ComboBoxItem Content="High" />
                                    <ComboBoxItem Content="Epic" IsSelected="True"/>
                                </ComboBox>
                            </StackPanel>
                            <StackPanel Orientation="Horizontal" Margin="0">
                                <Label Content="Blur Optimization" VerticalAlignment="Center"/>
                                <ComboBox x:Name="cmbBlurOptmization" Width="140" VerticalAlignment="Center">
                                    <ComboBoxItem Content="Always"/>
                                    <ComboBoxItem Content="Sometimes" />
                                    <ComboBoxItem Content="Prefer quality" />
                                    <ComboBoxItem Content="Always prefer quality" IsSelected="True"/>
                                </ComboBox>
                            </StackPanel>
                            <StackPanel Orientation="Horizontal" Margin="0">
                                <Label Content="Upscale Quality" VerticalAlignment="Center"/>
                                <ComboBox x:Name="cmbUpscaleQuality" Width="150" VerticalAlignment="Center">
                                    <ComboBoxItem Content="Nearest"/>
                                    <ComboBoxItem Content="Bilinear" />
                                    <ComboBoxItem Content="Directional" />
                                    <ComboBoxItem Content="5-tap Catmull-Rom" IsSelected="True"/>
                                    <ComboBoxItem Content="13-tap Lanczos" />
                                    <ComboBoxItem Content="36-tap Gaussian"/>
                                </ComboBox>
                            </StackPanel>
                            <CheckBox x:Name="chkGrainQuant" Content="Try remove grainyness" Margin="10,0,0,0" IsChecked="True" VerticalAlignment="Center"/>
                            <CheckBox x:Name="chkLightShafts" Content="Light Shafts" Margin="10,0,0,0" IsChecked="True" VerticalAlignment="Center"/>
                            <StackPanel Orientation="Horizontal" Margin="0">
                                <Label Content="Lightshaft Quality" VerticalAlignment="Center"/>
                                <ComboBox x:Name="cmbLightShaftQuality" Width="100" VerticalAlignment="Center">
                                    <ComboBoxItem Content="Low"/>
                                    <ComboBoxItem Content="Medium" />
                                    <ComboBoxItem Content="High" IsSelected="True"/>
                                    <ComboBoxItem Content="Epic" />
                                </ComboBox>
                            </StackPanel>
                        </WrapPanel>
                    </Expander>
                    <Line Stretch="Fill" Stroke="{DynamicResource {x:Static SystemColors.ActiveBorderBrushKey}}" X2="1"/>
                    <Expander>
                        <Expander.Style>
                            <Style TargetType="Expander">
                                <Setter Property="IsExpanded" Value="False" />
                                <Setter Property="Header" Value="See Depth of Field Settings" />

                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding IsExpanded,RelativeSource={RelativeSource Self}}" Value="True">
                                        <Setter Property="Header" Value="Hide Depth of Field Settings" />
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Expander.Style>
                        <WrapPanel Orientation="Horizontal" HorizontalAlignment="Left" VerticalAlignment="Top">
                            <Label Content="Depth of field" VerticalAlignment="Center" FontWeight="Bold" />
                            <StackPanel Orientation="Horizontal" Margin="0">
                                <Label Content="DOF Quality" VerticalAlignment="Center"/>
                                <ComboBox x:Name="cmbDOFQuality" Width="140" VerticalAlignment="Center">
                                    <ComboBoxItem Content="Low"/>
                                    <ComboBoxItem Content="High"/>
                                    <ComboBoxItem Content="Cutscenes-Very High"/>
                                    <ComboBoxItem Content="Cinematic-Extreme" IsSelected="True"/>
                                </ComboBox>
                            </StackPanel>
                            <StackPanel Orientation="Horizontal" Margin="0">
                                <Label Content="Filtering" VerticalAlignment="Center"/>
                                <ComboBox x:Name="cmbDOFFiltering" Width="100" VerticalAlignment="Center">
                                    <ComboBoxItem Content="None"/>
                                    <ComboBoxItem Content="Average 3x3" IsSelected="True"/>
                                    <ComboBoxItem Content="Max 3x3"/>
                                </ComboBox>
                            </StackPanel>
                            <CheckBox x:Name="chkDOFBokeh" Content="Bokeh" Margin="10,0,0,0" IsChecked="False" VerticalAlignment="Center"/>
                            <StackPanel Orientation="Horizontal" Margin="0">
                                <Label Content="Gather Rings" VerticalAlignment="Center"/>
                                <ComboBox x:Name="cmbGatherRings" Width="50" VerticalAlignment="Center">
                                    <ComboBoxItem Content="3"/>
                                    <ComboBoxItem Content="4" IsSelected="True"/>
                                    <ComboBoxItem Content="5"/>
                                </ComboBox>
                            </StackPanel>
                            <CheckBox x:Name="chkForegroundComposoting" Content="Foreground Hybrid Scattering" Margin="10,0,0,0" IsChecked="False" VerticalAlignment="Center"/>
                            <StackPanel Orientation="Horizontal" Margin="0">
                                <Label Content="Background Hybrid Scattering" VerticalAlignment="Center"/>
                                <ComboBox x:Name="cmbBackgroundComposoting" Width="120" VerticalAlignment="Center">
                                    <ComboBoxItem Content="Disabled"/>
                                    <ComboBoxItem Content="Add"/>
                                    <ComboBoxItem Content="Gather occlusion" IsSelected="True"/>
                                </ComboBox>
                            </StackPanel>
                            <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="10,0,0,0">
                                <Label Content="Pixel Scatter" VerticalAlignment="Center"/>
                                <Slider x:Name="slderMaxSpriteRatio" Margin="0,10,0,0" Width="120" VerticalAlignment="Center" SmallChange="0.01" LargeChange="0.1" Maximum="0.5" TickFrequency="0.1" Minimum="0" TickPlacement="BottomRight" IsSnapToTickEnabled="True" Value="0.1" AutoToolTipPlacement="BottomRight"/>
                            </StackPanel>
                            <StackPanel Orientation="Horizontal" Margin="0">
                                <Label Content="Out Of Focus Quality" VerticalAlignment="Center"/>
                                <ComboBox x:Name="cmbRecombineQuality" Width="120" VerticalAlignment="Center">
                                    <ComboBoxItem Content="None"/>
                                    <ComboBoxItem Content="24 samples" IsSelected="True"/>
                                    <ComboBoxItem Content="32 samples"/>
                                </ComboBox>
                            </StackPanel>
                            <CheckBox x:Name="chkScatterBokeh" Content="Out of focus Bokeh" Margin="10,0,0,0" IsChecked="False" VerticalAlignment="Center"/>
                            <CheckBox x:Name="chkFastDOFAA" Content="Fast DOF Antialiasing" Margin="10,0,0,0" IsChecked="False" VerticalAlignment="Center"/>
