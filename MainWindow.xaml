                                        <ComboBoxItem Content="Default" IsSelected="True"/>
                                        <ComboBoxItem Content="Double"/>
                                    </ComboBox>
                                </StackPanel>
                                <StackPanel Orientation="Horizontal" Margin="0">
                                    <Label Content="Shadow Resolution" VerticalAlignment="Center"/>
