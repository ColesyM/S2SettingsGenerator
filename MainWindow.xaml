                                </StackPanel>
                                <StackPanel Orientation="Horizontal" Margin="0">
                                    <Label Content="Preshadow Resolution" VerticalAlignment="Center"/>
                                    <Slider x:Name="sldrPreshadowRes" Margin="0,10,0,0" Width="120" VerticalAlignment="Center" SmallChange="0.1" LargeChange="0.25" Maximum="1.0" TickFrequency="1" Minimum="0.0" TickPlacement="BottomRight" IsSnapToTickEnabled="False" Value="{Binding PreShadowRes, Mode=TwoWay}" AutoToolTipPlacement="BottomRight" AutoToolTipPrecision="1"/>
                                </StackPanel>
                                <CheckBox x:Name="chkDistanceFieldShadowing" Content="Distance Field Shadowing" Margin="10,0,0,0" IsChecked="{Binding DistantFieldShadowing, Mode=TwoWay}" VerticalAlignment="Center"/>
