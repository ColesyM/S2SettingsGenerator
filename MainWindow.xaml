                                </StackPanel>
                                <CheckBox x:Name="chkSkyReflection" Content="Sky realtime reflection" Margin="10,0,0,0" IsChecked="{Binding SkyReflection, Mode=TwoWay}" VerticalAlignment="Center"/>
                                <StackPanel Orientation="Horizontal" Margin="0">
                                    <Label Content="Sky realtime reflection resolution" VerticalAlignment="Center"/>
                                    <ComboBox x:Name="cmbSkyReflectionRes" Width="120" VerticalAlignment="Center" SelectedIndex="{Binding SkyReflectionResIndex, Mode=TwoWay}">
                                        <ComboBoxItem Content="Low"/>
                                        <ComboBoxItem Content="Medium"/>
                                        <ComboBoxItem Content="High" IsSelected="True"/>
                                        <ComboBoxItem Content="Epic"/>
                                    </ComboBox>
                                </StackPanel>
                            </WrapPanel>
                        </Expander>
                    </Grid>
                    <Line Stretch="Fill" Stroke="{DynamicResource {x:Static SystemColors.ActiveBorderBrushKey}}" X2="1"/>
                    <Grid DataContext="{Binding FoliageQualitySettings}">
                        <Expander>
                            <Expander.Header>
                                <local:LockableExpanderHeader />
                            </Expander.Header>
                            <WrapPanel Orientation="Horizontal" HorizontalAlignment="Left" VerticalAlignment="Top">
                                <Label Content="Foliage" VerticalAlignment="Center" FontWeight="Bold" />
