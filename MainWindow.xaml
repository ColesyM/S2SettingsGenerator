<Window x:Class="S2SettingsGenerator.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:S2SettingsGenerator"
        mc:Ignorable="d"
        Title="Stalker 2 Graphics Settings Generator for Engine.ini" Height="980" Width="630" Loaded="Window_Loaded">
    <Grid Margin="0,0,0,0">
        <Image Margin="10,10,0,0" HorizontalAlignment="Left" VerticalAlignment="Top" Source="/S2HoC_GSCGameWorld__Logo_on_white.png" Height="64" Opacity="0.7"/>
        <Label Content="Settings Generator" HorizontalAlignment="Left" Margin="72,44,0,0" VerticalAlignment="Top" Foreground="Red" FontSize="20" FontWeight="Bold" RenderTransformOrigin="0.5,0.5">
            <Label.Effect>
                <DropShadowEffect BlurRadius="7.0"/>
            </Label.Effect>
            <Label.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform/>
                    <RotateTransform Angle="-15.046"/>
                    <TranslateTransform/>
                </TransformGroup>
            </Label.RenderTransform>
        </Label>
        <Border VerticalAlignment="Top" BorderBrush="Black" BorderThickness="2,2,2,2" Margin="262,5,10,0">
            <StackPanel>
                <Label HorizontalAlignment="Left" VerticalAlignment="Top" Padding="5,0,5,0">
                    <Label.Content>
                        <TextBlock Text="This will generate [/Script/Engine.RendererSettings] values only for an Engine.ini" TextWrapping="Wrap"/>
                    </Label.Content>
                </Label>
                <Label Content="It will not modify other settings." HorizontalAlignment="Left" VerticalAlignment="Center" Width="460"/>
                <Label HorizontalAlignment="Left" VerticalAlignment="Top" FontWeight="Bold" FontSize="10" Foreground="Red">
                    <Label.Content>
                        <TextBlock Text="It is not compatible with other .pak mods that modify Engine.ini RendererSettings" TextWrapping="Wrap"/>
                    </Label.Content>
                </Label>
            </StackPanel>
        </Border>
        <StackPanel HorizontalAlignment="Left" Margin="10,105,0,0" VerticalAlignment="Top">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" Margin="0">
                <Label Content="Preset:" HorizontalAlignment="Left" VerticalAlignment="Top" FontWeight="Bold"/>
                <Grid Margin="0,3,0,0" VerticalAlignment="Center" Width="400" Height="90">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="1*" />
                        <ColumnDefinition Width="1*" />
                        <ColumnDefinition Width="1*" />
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="1*"/>
                        <RowDefinition Height="1*"/>
                        <RowDefinition Height="1*"/>
                    </Grid.RowDefinitions>
                    <Button x:Name="rdioPotatoPreset" Grid.Column="0" Grid.Row="0" Content="Potato" Padding="5" Click="rdioPotatoPreset_Checked"/>
                    <Button x:Name="rdioVeryLowPreset" Grid.Column="0" Grid.Row="1" Content="Very Low" Padding="5"  Click="rdioVeryLowPreset_Checked"/>
                    <Button x:Name="rdioLowPreset" Grid.Column="0" Grid.Row="2" Content="Low" Padding="5"  IsEnabled="True" Click="rdioLowPreset_Checked"/>
                    <Button x:Name="btnMediumPreset" Grid.Column="1" Grid.Row="0" Content="Medium" Padding="5" Click="btnMediumPreset_Click"/>
                    <Button x:Name="btnHighPreset" Grid.Column="1" Grid.Row="1" Content="High" Padding="5" Click="btnHighPreset_Click"/>
                    <Button Grid.Column="1" Grid.Row="2" Content="Very High" Padding="5"  IsEnabled="False" Opacity="0.5"/>
                    <Button x:Name="rdioEpicPreset" Grid.Column="2" Grid.Row="0" Content="Epic" Padding="5"  IsEnabled="True" Click="rdioEpicPreset_Checked"/>
                    <Button x:Name="rdioUltraPreset" Grid.Column="2" Grid.Row="1" Content="Ultra" Padding="5"  Click="rdioUltraPreset_Checked"/>
                    <Button x:Name="rdioInsanePreset"  Grid.Column="2" Grid.Row="2" Content="Insane" Padding="5"  Click="rdioInsanePreset_Checked"/>
                </Grid>
                <Button x:Name="btnGenerate" Content="Generate Engine.ini" HorizontalAlignment="Left" Margin="10" Padding="10" Click="btnGenerate_Click"/>
            </StackPanel>
        </StackPanel>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,200,0,0" VerticalAlignment="Top" Width="630">
            <ScrollViewer Width="626">
                <StackPanel Orientation="Vertical" Margin="10,0,0,0" VerticalAlignment="Top" Width="535">
                    <StackPanel.Resources>
                        <Style TargetType="{x:Type StackPanel}">
                            <Setter Property="Margin" Value="0,10,0,0"/>
                        </Style>
                    </StackPanel.Resources>

                    <Line Stretch="Fill" Stroke="{DynamicResource {x:Static SystemColors.ActiveBorderBrushKey}}" X2="1"/>
                    <Grid DataContext="{Binding TextureQualitySettings}">
                        <Expander>
                            <Expander.Header>
                                <local:LockableExpanderHeader />
                            </Expander.Header>
                            <WrapPanel Orientation="Horizontal" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="0,10,0,0">
                                <Line Stretch="Fill" X2="1" Stroke="{DynamicResource {x:Static SystemColors.ActiveBorderBrushKey}}"/>
                                <Label Content="Textures" VerticalAlignment="Center" FontWeight="Bold"/>
                                <Slider x:Name="sldrTextures" ToolTip="Texure MIP Quality, 0 is best quality, increase for lower MIPs. &#x0a;Impact:&#x0a;VRAM: High&#x0a;Performance: Low" Margin="0,10,0,0" Width="120" VerticalAlignment="Center" SmallChange="0.5" LargeChange="0.5" Maximum="2" TickFrequency="0.5" Minimum="0" TickPlacement="BottomRight" IsDirectionReversed="True" IsSnapToTickEnabled="True" Value="{Binding TextureMIP, Mode=TwoWay}" ValueChanged="TextureSlider_ValueChanged" AutoToolTipPlacement="BottomRight" AutoToolTipPrecision="1"/>
                                <StackPanel Margin="10,0,0,0" Orientation="Horizontal">
                                    <Label Content="Anisotropic" VerticalAlignment="Center"/>
                                    <ComboBox x:Name="cmbAnisotropic" ToolTip="Texure sampling quality, better detail at tighter viewing angles. &#x0a;Impact:&#x0a;VRAM: Low&#x0a;Performance: Low-Medium" Width="100" VerticalAlignment="Center" SelectedIndex="{Binding AnisotropicIndex, Mode=TwoWay}">
                                        <ComboBoxItem Content="Disabled"/>
                                        <ComboBoxItem Content="2x"/>
                                        <ComboBoxItem Content="4x"/>
                                        <ComboBoxItem Content="8x" IsSelected="True"/>
                                        <ComboBoxItem Content="16x"/>
                                    </ComboBox>
                                </StackPanel>
                                <StackPanel Margin="10,0,0,0" Orientation="Horizontal">
                                    <Label Content="Streaming Pool" VerticalAlignment="Center"/>
                                    <ComboBox x:Name="cmbStreamingPool" ToolTip="Texure pool size, for streaming tetures to display. &#x0a;Impact:&#x0a;VRAM: High&#x0a;Performance: Low-Medium" Width="100" VerticalAlignment="Center" SelectedIndex="{Binding StreamingPoolIndex, Mode=TwoWay}">
                                        <ComboBoxItem Content="Tiny"/>
                                        <ComboBoxItem Content="Small"/>
                                        <ComboBoxItem Content="Medium"/>
                                        <ComboBoxItem Content="Large"/>
                                        <ComboBoxItem Content="Very Large" IsSelected="True"/>
                                        <CheckBox IsChecked="True" Content="Limit to VRAM"/>
                                    </ComboBox>
                                </StackPanel>
                                <CheckBox x:Name="chkAmortizeCPUToGPUCopy" ToolTip="Limit the number of textures copied from CPU to VRAM. &#x0a;Impact:&#x0a;VRAM: Low&#x0a;Performance: Low" Margin="10,0,0,0" VerticalAlignment="Center" IsChecked="{Binding AmortizeCPUToGPUCopy, Mode=TwoWay}" Content="Throttle copy to VRAM"/>
                                <StackPanel Orientation="Horizontal" Margin="0">
                                    <Label Content="Mip Preference" VerticalAlignment="Center"/>
                                    <ComboBox x:Name="cmbMipPreference" ToolTip="Texture MIP Quality bias preference. &#x0a;Impact:&#x0a;VRAM: Medium&#x0a;Performance: Low" Width="120" VerticalAlignment="Center" SelectedIndex="{Binding MipPreferenceIndex, Mode=TwoWay}">
                                        <ComboBoxItem Content="Prefer Lower"/>
                                        <ComboBoxItem Content="Normal" IsSelected="True"/>
                                        <ComboBoxItem Content="Prefer Higher"/>
                                    </ComboBox>
                                </StackPanel>
                                <StackPanel Orientation="Horizontal" Margin="0">
                                    <Label Content="Stream Limit Per Frame" VerticalAlignment="Center"/>
                                    <ComboBox x:Name="cmbStreamLimitPerFrame" ToolTip="Limit count for copy from CPU to VRAM if throttle is checked. &#x0a;Impact:&#x0a;VRAM: Low&#x0a;Performance: Medium" Width="100" VerticalAlignment="Center" IsEnabled="{Binding AmortizeCPUToGPUCopy}" SelectedIndex="{Binding StreamLimitPerFrameIndex, Mode=TwoWay}">
                                        <ComboBoxItem Content="No Limit" IsSelected="True"/>
                                        <ComboBoxItem Content="10" />
                                        <ComboBoxItem Content="5" />
                                        <ComboBoxItem Content="3" />
                                        <ComboBoxItem Content="1" />
                                    </ComboBox>
                                </StackPanel>
                                <StackPanel Orientation="Horizontal" Margin="0">
                                    <Label Content="Texture Copy Speed" VerticalAlignment="Center"/>
                                    <ComboBox x:Name="cmbTextureCopySpeed" ToolTip="Max number of texture pages uploaded per frame. &#x0a;Impact:&#x0a;VRAM: Medium&#x0a;Performance: Medium"  Width="100" VerticalAlignment="Center" SelectedIndex="{Binding TextureCopySpeedIndex, Mode=TwoWay}">
                                        <ComboBoxItem Content="Very Low"/>
                                        <ComboBoxItem Content="Low" />
                                        <ComboBoxItem Content="Medium" />
                                        <ComboBoxItem Content="High" IsSelected="True"/>
                                    </ComboBox>
                                </StackPanel>
                                <StackPanel Orientation="Horizontal" Margin="0">
                                <Label Content="Texture Generation Speed" VerticalAlignment="Center"/>
                                    <ComboBox x:Name="cmbTextureGenerationSpeed" ToolTip="Max number of texture pages built per frame. &#x0a;Impact:&#x0a;VRAM: Low&#x0a;Performance: Medium" Width="100" VerticalAlignment="Center" SelectedIndex="{Binding TextureGenerationSpeedIndex, Mode=TwoWay}">
                                    <ComboBoxItem Content="Very Low"/>
                                    <ComboBoxItem Content="Low" />
                                    <ComboBoxItem Content="Medium" />
                                    <ComboBoxItem Content="High" IsSelected="True"/>
                                </ComboBox>
                            </StackPanel>
                        </WrapPanel>
                    </Expander>
                    </Grid>
                    <Line Stretch="Fill" Stroke="{DynamicResource {x:Static SystemColors.ActiveBorderBrushKey}}" X2="1"/>
                    <Grid DataContext="{Binding HairQualitySettings}">
                        <Expander>
                            <Expander.Header>
                                <local:LockableExpanderHeader />
                            </Expander.Header>
                            <WrapPanel Orientation="Horizontal" HorizontalAlignment="Left" VerticalAlignment="Top">
                                <Label Content="Hair" FontWeight="Bold" VerticalAlignment="Center"/>
                                <CheckBox x:Name="chkHairAO" Content="Ambient Occlusion" IsChecked="{Binding HairAO, Mode=TwoWay}" VerticalAlignment="Center"/>
                                <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="10,0,0,0">
                                    <Label Content="AO Samples" VerticalAlignment="Center"/>
                                    <Slider x:Name="sldrHairAOSamples" Margin="0,10,0,0" Width="120" VerticalAlignment="Center" SmallChange="1" LargeChange="1" Maximum="5" TickFrequency="1" Minimum="1" TickPlacement="BottomRight" IsSnapToTickEnabled="True" Value="{Binding HairAOSamples, Mode=TwoWay}" AutoToolTipPlacement="BottomRight" AutoToolTipPrecision="0"/>
                                </StackPanel>
                                <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="10,0,0,0">
                                    <Label Content="Strand Visiblity" VerticalAlignment="Center"/>
                                    <Slider x:Name="sldrHairStrandVisibility" Margin="0,10,0,0" Width="120" VerticalAlignment="Center" SmallChange="1" LargeChange="1" Maximum="5" TickFrequency="1" Minimum="1" TickPlacement="BottomRight" IsSnapToTickEnabled="True" Value="{Binding HairStrandVisibility, Mode=TwoWay}" AutoToolTipPlacement="BottomRight" AutoToolTipPrecision="0"/>
                                </StackPanel>
                                <CheckBox x:Name="chkHairLightingAndShadows" Content="Lighting and Shadows" IsChecked="{Binding HairLightingAndShadows, Mode=TwoWay}" VerticalAlignment="Center"/>
                                <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="10,0,0,0">
                                    <Label Content="Quality" VerticalAlignment="Center"/>
                                    <Slider x:Name="sldrHairQuality" Margin="0,10,0,0" Width="120" VerticalAlignment="Center" SmallChange="1" LargeChange="1" Maximum="3" TickFrequency="1" Minimum="0" TickPlacement="BottomRight" IsSnapToTickEnabled="True" Value="{Binding HairQuality, Mode=TwoWay}" AutoToolTipPlacement="BottomRight" AutoToolTipPrecision="0"/>
                                </StackPanel>
                            </WrapPanel>
                        </Expander>
                    </Grid>
                    <Line Stretch="Fill" Stroke="{DynamicResource {x:Static SystemColors.ActiveBorderBrushKey}}" X2="1"/>
                    <Grid DataContext="{Binding ObjectDetailQualitySettings}">
                        <Expander>
                            <Expander.Header>
                                <local:LockableExpanderHeader />
                            </Expander.Header>
                            <WrapPanel Orientation="Horizontal" HorizontalAlignment="Left" VerticalAlignment="Top">
                                <Label Content="Objects" VerticalAlignment="Center" FontWeight="Bold" />
                                <StackPanel Orientation="Horizontal" Margin="0">
                                    <Label Content="Overall Detail" VerticalAlignment="Center"/>
                                    <ComboBox x:Name="cmbOverallDetail" Width="100" VerticalAlignment="Center" SelectedIndex="{Binding OverallDetailIndex,Mode=TwoWay}">
                                        <ComboBoxItem Content="Low"/>
                                        <ComboBoxItem Content="Medium" />
                                        <ComboBoxItem Content="High" IsSelected="True"/>
                                        <ComboBoxItem Content="Epic" />
                                    </ComboBox>
                                </StackPanel>
                                <StackPanel Orientation="Horizontal" Margin="0">
                                    <Label Content="Nanite Fine Detail" VerticalAlignment="Center"/>
                                    <ComboBox x:Name="cmbNanitePixelsPerEdge" Width="100" VerticalAlignment="Center" SelectedIndex="{Binding NanitePixelsPerEdgeIndex, Mode=TwoWay}">
                                        <ComboBoxItem Content="Low"/>
                                        <ComboBoxItem Content="Medium" />
                                        <ComboBoxItem Content="High"/>
                                        <ComboBoxItem Content="Per Pixel" IsSelected="True"/>
                                    </ComboBox>
                                </StackPanel>
                                <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="10,0,0,0">
                                    <Label Content="Preferred Detail" VerticalAlignment="Center"/>
                                    <Slider x:Name="sldrPreferredObjectDetail" Margin="0,10,0,0" Width="120" VerticalAlignment="Center" SmallChange="0.05" LargeChange="0.1" Maximum="1" TickFrequency="0.1" Minimum="0" TickPlacement="BottomRight" IsSnapToTickEnabled="False" Value="{Binding PreferredObjectDetail, Mode=TwoWay}" IsDirectionReversed="True" AutoToolTipPlacement="BottomRight" AutoToolTipPrecision="1"/>
                                </StackPanel>
                                <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="10,0,0,0">
                                    <Label Content="Required Detail" VerticalAlignment="Center"/>
                                    <Slider x:Name="sldrRequiredObjectDetail" Margin="0,10,0,0" Width="120" VerticalAlignment="Center" SmallChange="0.05" LargeChange="0.1" Maximum="0" TickFrequency="0.1" Minimum="-2" TickPlacement="BottomRight" IsSnapToTickEnabled="False" IsDirectionReversed="True" Value="{Binding RequiredObjectDetail, Mode=TwoWay}" AutoToolTipPlacement="BottomRight" AutoToolTipPrecision="1"/>
                                </StackPanel>
                                <StackPanel Orientation="Horizontal" Margin="0">
                                    <Label Content="Max Attaches" VerticalAlignment="Center"/>
                                    <ComboBox x:Name="cmbMaxAttaches" Width="100" VerticalAlignment="Center" SelectedIndex="{Binding MaxAttachesIndex, Mode=TwoWay}">
                                        <ComboBoxItem Content="5"/>
                                        <ComboBoxItem Content="10" />
                                        <ComboBoxItem Content="20"/>
                                        <ComboBoxItem Content="No Limit" IsSelected="True"/>
                                    </ComboBox>
                                </StackPanel>
                            </WrapPanel>
                        </Expander>
                    </Grid>
                    <Line Stretch="Fill" Stroke="{DynamicResource {x:Static SystemColors.ActiveBorderBrushKey}}" X2="1"/>
                    <Grid DataContext="{Binding EffectsQualitySettings}">
                        <Expander>
                            <Expander.Header>
                                <local:LockableExpanderHeader />
                            </Expander.Header>
                            <WrapPanel Orientation="Horizontal" HorizontalAlignment="Left" VerticalAlignment="Top">
                                <Label Content="Effects" VerticalAlignment="Center" FontWeight="Bold" />
                                <StackPanel Orientation="Horizontal" Margin="0">
                                    <Label Content="Refraction Quality" VerticalAlignment="Center"/>
                                    <ComboBox x:Name="cmbRefractionQuality" Width="100" VerticalAlignment="Center" SelectedIndex="{Binding RefractionQualityIndex, Mode=TwoWay}">
                                        <ComboBoxItem Content="Off"/>
                                        <ComboBoxItem Content="Low"/>
                                        <ComboBoxItem Content="Medium" IsSelected="True"/>
                                        <ComboBoxItem Content="High" />
                                    </ComboBox>
                                </StackPanel>
                                <CheckBox x:Name="chkParticleRefractionAA" Content="Refraction Antialiasing" Margin="10,0,0,0" IsChecked="{Binding ParticleRefractionAA, Mode=TwoWay}" VerticalAlignment="Center"/>
                                <StackPanel Orientation="Horizontal" Margin="0">
                                    <Label Content="Particle counts" VerticalAlignment="Center"/>
                                    <Slider x:Name="sldrEmitterSpawnRate" Margin="0,10,0,0" Width="120" VerticalAlignment="Center" SmallChange="0.1" LargeChange="1" Maximum="1" TickFrequency="0.1" Minimum="0" TickPlacement="BottomRight" IsSnapToTickEnabled="True" Value="{Binding EmitterSpawnRate, Mode=TwoWay}" AutoToolTipPlacement="BottomRight" AutoToolTipPrecision="1"/>
                                </StackPanel>
                                <StackPanel Orientation="Horizontal" Margin="0">
                                    <Label Content="Particle Lighting" VerticalAlignment="Center"/>
                                    <ComboBox x:Name="cmbParticleLighting" Width="100" VerticalAlignment="Center" SelectedIndex="{Binding ParticleLightingIndex, Mode=TwoWay}">
                                        <ComboBoxItem Content="Unlit"/>
                                        <ComboBoxItem Content="Simple" />
                                        <ComboBoxItem Content="High Quality" IsSelected="True"/>
                                    </ComboBox>
                                </StackPanel>
                                <StackPanel Orientation="Horizontal" Margin="0">
                                    <Label Content="Particle Quality" VerticalAlignment="Center" />
                                    <ComboBox x:Name="cmbParticleQuality" Width="100" VerticalAlignment="Center" SelectedIndex="{Binding ParticleQualityIndex, Mode=TwoWay}">
                                        <ComboBoxItem Content="Low"/>
                                        <ComboBoxItem Content="Medium" />
                                        <ComboBoxItem Content="High"/>
                                        <ComboBoxItem Content="Epic" IsSelected="True"/>
                                    </ComboBox>
                                </StackPanel>
                                <StackPanel Orientation="Horizontal" Margin="0">
                                    <Label Content="Particle simulation" VerticalAlignment="Center"/>
                                    <Slider x:Name="sldrParticleSimulation" Margin="0,10,0,0" Width="120" VerticalAlignment="Center" SmallChange="1" LargeChange="1" Maximum="20" TickFrequency="1" Minimum="1" TickPlacement="BottomRight" IsSnapToTickEnabled="True" Value="{Binding ParticleSimulation, Mode=TwoWay}" AutoToolTipPlacement="BottomRight" AutoToolTipPrecision="0"/>
                                </StackPanel>
                            </WrapPanel>
                        </Expander>
                    </Grid>
                    <Line Stretch="Fill" Stroke="{DynamicResource {x:Static SystemColors.ActiveBorderBrushKey}}" X2="1"/>
                    <Grid DataContext="{Binding MaterialsQualitySettings}">
                        <Expander>
                            <Expander.Header>
                                <local:LockableExpanderHeader />
                            </Expander.Header>
                            <WrapPanel Orientation="Horizontal" HorizontalAlignment="Left" VerticalAlignment="Top">
                                <Label Content="Materials" VerticalAlignment="Center" FontWeight="Bold" />
                                <StackPanel Orientation="Horizontal" Margin="0">
                                    <Label Content="Material Quality" VerticalAlignment="Center"/>
                                    <ComboBox x:Name="cmbMaterialQuality" Width="120" VerticalAlignment="Center" SelectedIndex="{Binding MaterialQualityIndex, Mode=TwoWay}">
                                        <ComboBoxItem Content="Low"/>
                                        <ComboBoxItem Content="Medium" />
                                        <ComboBoxItem Content="High"/>
                                        <ComboBoxItem Content="Epic" IsSelected="True"/>
                                    </ComboBox>
                                </StackPanel>
                                <CheckBox x:Name="chkMaterialAniso" Content="Anisotropic BRDF" Margin="10,0,0,0" IsChecked="{Binding MaterialAnisotropic, Mode=TwoWay}" VerticalAlignment="Center"/>
                            </WrapPanel>
                        </Expander>
                    </Grid>
                    <Line Stretch="Fill" Stroke="{DynamicResource {x:Static SystemColors.ActiveBorderBrushKey}}" X2="1"/>
                    <Grid DataContext="{Binding PostProcessingQualitySettings}">
                        <Expander>
                            <Expander.Header>
                                <local:LockableExpanderHeader />
                            </Expander.Header>
                            <WrapPanel Orientation="Horizontal" HorizontalAlignment="Left" VerticalAlignment="Top">
                                <Label Content="Post Processing" VerticalAlignment="Center" FontWeight="Bold" />
                                <StackPanel Orientation="Horizontal" Margin="0">
                                    <Label Content="Filtering Quality" VerticalAlignment="Center"/>
                                    <ComboBox x:Name="cmbPPFilteringQuality" Width="100" VerticalAlignment="Center" SelectedIndex="{Binding FilteringQualityIndex, Mode=TwoWay}">
                                        <ComboBoxItem Content="Low"/>
                                        <ComboBoxItem Content="Medium" />
                                        <ComboBoxItem Content="High" IsSelected="True"/>
                                    </ComboBox>
                                </StackPanel>
                                <StackPanel Orientation="Horizontal" Margin="0">
                                    <Label Content="Tonemapper" VerticalAlignment="Center"/>
                                    <ComboBox x:Name="cmbToneMapper" Width="120" VerticalAlignment="Center" SelectedIndex="{Binding ToneMapperIndex, Mode=TwoWay}">
                                        <ComboBoxItem Content="Basic"/>
                                        <ComboBoxItem Content="Vignette" />
                                        <ComboBoxItem Content="Grain" />
                                        <ComboBoxItem Content="GrainJitter  " IsSelected="True"/>
                                    </ComboBox>
                                </StackPanel>
                                <StackPanel Orientation="Horizontal" Margin="0">
                                    <Label Content="VRAM Allowance" VerticalAlignment="Center"/>
                                    <Slider x:Name="sldrPPRenderTargetPool" Margin="0,10,0,0" Width="120" VerticalAlignment="Center" SmallChange="50" LargeChange="100" Maximum="600" TickFrequency="50" Minimum="100" TickPlacement="BottomRight" IsSnapToTickEnabled="True" Value="{Binding RenderTargetPool, Mode=TwoWay}" AutoToolTipPlacement="BottomRight" AutoToolTipPrecision="0"/>
                                </StackPanel>
                                <StackPanel Orientation="Horizontal" Margin="0">
                                    <Label Content="Lens-Flare Quality" VerticalAlignment="Center"/>
                                    <ComboBox x:Name="cmbLensFlareQuality" Width="120" VerticalAlignment="Center" SelectedIndex="{Binding LensFlareQualityIndex, Mode=TwoWay}">
                                        <ComboBoxItem Content="Low"/>
                                        <ComboBoxItem Content="Medium" />
                                        <ComboBoxItem Content="High" IsSelected="True"/>
                                    </ComboBox>
                                </StackPanel>
                                <CheckBox x:Name="chkFringeQual" Content="Improve Scene Colour Fringe Quality" Margin="10,0,0,0" IsChecked="{Binding ImproveFringeQuality, Mode=TwoWay}" VerticalAlignment="Center"/>
                                <CheckBox x:Name="chkEyeAdapatation" Content="Eye Adaptation" Margin="10,0,0,0" IsChecked="{Binding EyeAdaptation, Mode=TwoWay}" VerticalAlignment="Center"/>
                                <StackPanel Orientation="Horizontal" Margin="10,0,0,0">
                                    <Label Content="Eye Adaptation Brightness" VerticalAlignment="Center"/>
                                    <Slider x:Name="sldrEyeAdaptationLensAtt" Width="150"  Minimum="0.0" Maximum="5.0" SmallChange="0.01" LargeChange="0.5" Value="{Binding EyeAdaptationLensAttenuation, Mode=TwoWay}" TickFrequency="0.1" TickPlacement="BottomRight" IsSnapToTickEnabled="False" AutoToolTipPlacement="BottomRight" AutoToolTipPrecision="2"/>
                                </StackPanel>
                                <StackPanel Orientation="Horizontal" Margin="0">
                                    <Label Content="Bloom Quality" VerticalAlignment="Center"/>
                                    <ComboBox x:Name="cmbBloomQuality" Width="120" VerticalAlignment="Center" SelectedIndex="{Binding BloomQualityIndex, Mode=TwoWay}">
                                        <ComboBoxItem Content="Off"/>
                                        <ComboBoxItem Content="Very Low" />
                                        <ComboBoxItem Content="Low" />
                                        <ComboBoxItem Content="Medium" />
                                        <ComboBoxItem Content="High" />
                                        <ComboBoxItem Content="Epic" IsSelected="True"/>
                                    </ComboBox>
                                </StackPanel>
                                <StackPanel Orientation="Horizontal" Margin="0">
                                    <Label Content="Blur Optimization" VerticalAlignment="Center"/>
                                    <ComboBox x:Name="cmbBlurOptmization" Width="140" VerticalAlignment="Center" SelectedIndex="{Binding BlurOptimizationIndex, Mode=TwoWay}">
                                        <ComboBoxItem Content="Always"/>
                                        <ComboBoxItem Content="Sometimes" />
                                        <ComboBoxItem Content="Prefer quality" />
                                        <ComboBoxItem Content="Always prefer quality" IsSelected="True"/>
                                    </ComboBox>
                                </StackPanel>
                                <StackPanel Orientation="Horizontal" Margin="0">
                                    <Label Content="Upscale Quality" VerticalAlignment="Center"/>
                                    <ComboBox x:Name="cmbUpscaleQuality" Width="150" VerticalAlignment="Center" SelectedIndex="{Binding UpscaleQualityIndex, Mode=TwoWay}">
                                        <ComboBoxItem Content="Nearest"/>
                                        <ComboBoxItem Content="Bilinear" />
                                        <ComboBoxItem Content="Directional" />
                                        <ComboBoxItem Content="5-tap Catmull-Rom" IsSelected="True"/>
                                        <ComboBoxItem Content="13-tap Lanczos" />
                                        <ComboBoxItem Content="36-tap Gaussian"/>
                                    </ComboBox>
                                </StackPanel>
                                <CheckBox x:Name="chkGrainQuant" Content="Try remove grainyness" Margin="10,0,0,0" IsChecked="{Binding GrainQuant, Mode=TwoWay}" VerticalAlignment="Center"/>
                                <CheckBox x:Name="chkLightShafts" Content="Light Shafts" Margin="10,0,0,0" IsChecked="{Binding LightShafts, Mode=TwoWay}" VerticalAlignment="Center"/>
                                <StackPanel Orientation="Horizontal" Margin="0">
                                    <Label Content="Lightshaft Quality" VerticalAlignment="Center"/>
                                    <ComboBox x:Name="cmbLightShaftQuality" Width="100" VerticalAlignment="Center" SelectedIndex="{Binding LightshaftQualityIndex, Mode=TwoWay}">
                                        <ComboBoxItem Content="Low"/>
                                        <ComboBoxItem Content="Medium" />
                                        <ComboBoxItem Content="High" IsSelected="True"/>
                                        <ComboBoxItem Content="Epic" />
                                    </ComboBox>
                                </StackPanel>
                            </WrapPanel>
                        </Expander>
                    </Grid>
                    <Line Stretch="Fill" Stroke="{DynamicResource {x:Static SystemColors.ActiveBorderBrushKey}}" X2="1"/>
                    <Grid DataContext="{Binding DOFQualitySettings}">
                        <Expander>
                            <Expander.Header>
                                <local:LockableExpanderHeader />
                            </Expander.Header>
                            <WrapPanel Orientation="Horizontal" HorizontalAlignment="Left" VerticalAlignment="Top">
                                <Label Content="Depth of field" VerticalAlignment="Center" FontWeight="Bold" />
                                <StackPanel Orientation="Horizontal" Margin="0">
                                    <Label Content="DOF Quality" VerticalAlignment="Center"/>
                                    <ComboBox x:Name="cmbDOFQuality" Width="140" VerticalAlignment="Center" SelectedIndex="{Binding DOFQualityIndex, Mode=TwoWay}">
