<UserControl x:Class="S2SettingsGenerator.LockableExpanderHeader"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:S2SettingsGenerator"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/CustomStyles.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>
    <StackPanel Orientation="Horizontal">
        <Label>
            <Label.Content>
                <TextBlock Text="{Binding SettingsName}" TextWrapping="Wrap"/>
            </Label.Content>
        </Label>
        <CheckBox IsChecked="{Binding PresetLocked, Mode=TwoWay}" VerticalAlignment="Center" Style="{StaticResource CheckBoxLock}" />
    </StackPanel>
</UserControl>
